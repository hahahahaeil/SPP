<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud2">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/touxiang" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:layout_gravity="bottom"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_weight="0.48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naive"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:editable="true"
                android:id="@+id/Nickname"/>

        </LinearLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_gravity="bottom"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="猫猫等级"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="0.48" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1级"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/catLevel"/>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/titlebar_lightgray_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00公里"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/UserDistance" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="累计距离"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/textView" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vertical_line"
            android:layout_gravity="center"
            android:id="@+id/imageView" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00小时"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/UserTotalTime" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="累计时间"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/textView1" />

        </LinearLayout>

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/titlebar_lightgray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人最佳成绩"
                android:textSize="20dp"
                android:id="@+id/textView2" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/horizonal_line"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最长距离"
                android:textSize="18dp"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0公里"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:id="@+id/longestDistanceTextView" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/horizonal_line"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最长时间"
                android:textSize="18dp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0小时"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:id="@+id/longestTimeTextView" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/quit"/>

</LinearLayout>